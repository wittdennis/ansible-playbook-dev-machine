---
extends: default
ignore:
  - .github
  - .pre-commit-config.yaml
rules:
  line-length:
    max: 240
  comments:
    min-spaces-from-content: 1
  braces:
    max-spaces-inside: 1
    max-spaces-inside-empty: 0
  indentation:
    indent-sequences: true
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true
